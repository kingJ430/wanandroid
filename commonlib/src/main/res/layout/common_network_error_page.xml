<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_no_network"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="100dp"
    >

    <ImageView
        android:id="@+id/iv_exception_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/common_icon_error_network"/>

    <TextView
        android:id="@+id/tv_exception_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="网络连接失败"
        android:textColor="@color/color_AFAFAF"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/tv_exception_tip_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="请检查您的网络状态、稍后再试"
        android:textColor="@color/color_AFAFAF"
        android:textSize="@dimen/sp_13"/>
</LinearLayout>
